{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "types": ["node"]
    },
    "include": ["src/**/*", "tests/**/*.ts", "src/schemas/*.graphql"],
    "exclude": ["node_modules", "build"]
}
